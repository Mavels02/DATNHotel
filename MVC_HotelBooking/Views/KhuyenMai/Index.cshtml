@model IEnumerable<MVC_HotelBooking.ViewModel.KhuyenMaiViewModel>

@{
    ViewData["Title"] = "Danh sách khuyến mãi";
    Layout = "_Layout_Admin";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">+ Thêm khuyến mãi</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Tên KM</th>
                <th>Phần trăm (%)</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Trạng thái</th>
                <th class="text-center" style="width:150px">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var km in Model)
            {
                <tr>
                    <td>@km.TenKM</td>
                    <td>@km.PhanTramKM</td>
                    <td>@km.NgayBatDau.ToString("dd/MM/yyyy")</td>
                    <td>@km.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                    <td>@km.TrangThai</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@km.MaKM" class="btn btn-sm btn-primary">Sửa</a>
                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa khuyến mãi này không?');">
                            <input type="hidden" name="id" value="@km.MaKM" />
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>