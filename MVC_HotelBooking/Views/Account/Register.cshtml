@model MVC_HotelBooking.ViewModel.RegisterViewModel;
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/register.css" rel="stylesheet" />
<div class="form-container">

    <!-- Form Đăng ký -->
    <div class="form-box" id="register-form">
        <h2>Đăng Ký</h2>
    </div>

    <form method="post" asp-action="Register">
        <div class="input-group">
            <label asp-for="Ten">Họ và Tên</label>
            <input asp-for="Ten" type="text" id="Ten" name="Ten" placeholder="Nhập họ và tên" required>
        </div>
        <div class="input-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" id="Email" name="Email" placeholder="Nhập email của bạn" required oninput="validateEmail()">
            <span id="email-error" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>
        <div class="input-group">
            <label asp-for="SDT">Số điện thoại</label>
            <input asp-for="SDT" type="text" id="SDT" name="SDT" placeholder="Nhập số điện thoại" required oninput="validatePhoneNumber()">
            <span id="phone-error" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>
        <div class="input-group">
            <label asp-for="MatKhau">Mật khẩu</label>
            <input asp-for="MatKhau" type="password" id="MatKhau" name="MatKhau" placeholder="Nhập mật khẩu" required oninput="validatePassword()">
        </div>
        <div class="input-group">
            <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Xác nhận mật khẩu" required oninput="validatePassword()">
            <span id="password-error" class="text-danger" style="font-size: 0.9rem;"></span>
        </div>

        <button type="submit" id="submit-button" class="btn btn-primary disabled-button" disabled>Đăng ký</button>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="alert alert-danger">@error.ErrorMessage</div>
        }
        <p>Đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập ngay</a></p>
    </form>
</div>

<!-- JavaScript kiểm tra định dạng email -->
<script src="/js/register.js"></script>